<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Phone name here"
        android:id="@+id/phoneTextView"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/phoneImageView"
        android:layout_below="@+id/phoneTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bacon ipsum dolor amet fatback frankfurter salami, cow boudin pastrami tenderloin prosciutto chicken pancetta short ribs ball tip picanha. Bresaola fatback ball tip ham hock prosciutto andouille tail porchetta meatball pork salami picanha t-bone."
        android:id="@+id/textView3"
        android:layout_below="@+id/phoneImageView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:onClick="backButtonPressed"/>

</RelativeLayout>
